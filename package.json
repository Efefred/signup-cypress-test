{
  "name": "signup-cypress-test",
  "version": "1.0.0",
  "scripts": {
    "cypress:run": "xvfb-run -a npx cypress run --browser electron",
    "report:mochawesome": "marge cypress/reports/mochawesome/*.json --reportDir cypress/reports/mochawesome/html --inline",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "posttest": "npm run report:mochawesome && npm run report:allure",
    "test": "npm run cypress:run"
  },
  "devDependencies": {
    "cypress": "^15.0.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "@shelex/cypress-allure-plugin": "^2.40.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}